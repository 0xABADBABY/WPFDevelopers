<Window x:Class="WPFBreatheLight.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFBreatheLight"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <local:LampControl Grid.Column="0" Width="60" IsLampLight="True" LampEffect="Eclipse" FillBackground="#7FFFD4"/>
        <local:LampControl Grid.Column="1" Width="60" IsLampLight="True" LampEffect="OuterGlow"/>
        <local:LampControl Grid.Column="2" Width="60" IsLampLight="True" LampEffect="Ripple" FillBackground="#00BFFF"/>
    </Grid>
</Window>
