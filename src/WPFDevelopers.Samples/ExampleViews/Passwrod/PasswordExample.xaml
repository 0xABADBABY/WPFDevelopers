<UserControl x:Class="WPFDevelopers.Samples.ExampleViews.Passwrod.PasswordExample"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFDevelopers.Samples.Passwrod"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <local:PasswordWithPlainText Hint="请输入用户密码" Foreground="Black" Height="38"
                                      Width="400"
                                      Password="{Binding Password,Mode=TwoWay}"
                                      Margin="10,0"
                                      BorderBrush="Black"
                                      VerticalAlignment="Center"/>
    </Grid>
</UserControl>
