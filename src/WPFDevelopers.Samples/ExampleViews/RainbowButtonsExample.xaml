<UserControl x:Class="WPFDevelopers.Samples.ExampleViews.RainbowButtonsExample"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d"  Background="{StaticResource BlackSolidColorBrush}"
              xmlns:wpfdev="https://github.com/WPFDevelopersOrg/WPFDevelopers"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <FontFamily x:Key="Fixedsys">/WPFDevelopers.Samples;component/Resources/Fonts/fixedsys.ttf#Fixedsys Excelsior 3.01</FontFamily>
    </UserControl.Resources>
    <UniformGrid Rows="2">
        <wpfdev:RainbowAppleButton Content="Apple!" FontFamily="{StaticResource Fixedsys}"/>
        <wpfdev:RainbowAppleButtonWithGlow  FontFamily="{StaticResource Fixedsys}"/>
    </UniformGrid>
</UserControl>
